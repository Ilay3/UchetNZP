@model UchetNZP.Web.Models.ScrapReportViewModel
@{
    ViewData["Title"] = "Отчёт по браку";
}

<div class="page-header mb-4 text-center text-md-start">
    <h1 class="display-4 fw-bold">Отчёт по браку</h1>
    <p class="lead mb-0">Фиксация всех случаев брака с удобными фильтрами по датам, участкам и ответственным.</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-4 align-items-end" autocomplete="off">
            <div class="col-12 col-md-6 col-xl-4">
                <label class="form-label fs-5" for="scrapFromInput">Период с</label>
                <input id="scrapFromInput" class="form-control form-control-lg" type="date" name="from" value='@Model.Filter.From.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-12 col-md-6 col-xl-4">
                <label class="form-label fs-5" for="scrapToInput">по</label>
                <input id="scrapToInput" class="form-control form-control-lg" type="date" name="to" value='@Model.Filter.To.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-12 col-md-6 col-xl-4">
                <label class="form-label fs-5" for="scrapSectionInput">Участок</label>
                <input id="scrapSectionInput" class="form-control form-control-lg" type="text" name="section" value='@Model.Filter.Section' placeholder="Название или код участка" />
            </div>
            <div class="col-12 col-md-6 col-xl-4">
                <label class="form-label fs-5" for="scrapPartInput">Деталь</label>
                <input id="scrapPartInput" class="form-control form-control-lg" type="text" name="part" value='@Model.Filter.Part' placeholder="Наименование или обозначение детали" />
            </div>
            <div class="col-12 col-md-6 col-xl-4">
                <label class="form-label fs-5" for="scrapTypeSelect">Тип брака</label>
                <select id="scrapTypeSelect" class="form-select form-select-lg" name="scrapType">
                    <option value="">Все типы</option>
                    @if (Model.Filter.ScrapType == "Technological")
                    {
                        <option value="Technological" selected>Технологический</option>
                    }
                    else
                    {
                        <option value="Technological">Технологический</option>
                    }
                    @if (Model.Filter.ScrapType == "EmployeeFault")
                    {
                        <option value="EmployeeFault" selected>По вине сотрудника</option>
                    }
                    else
                    {
                        <option value="EmployeeFault">По вине сотрудника</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-6 col-xl-4">
                <label class="form-label fs-5" for="scrapEmployeeInput">Сотрудник</label>
                <input id="scrapEmployeeInput" class="form-control form-control-lg" type="text" name="employee" value='@Model.Filter.Employee' placeholder="Фрагмент идентификатора сотрудника" />
            </div>
            <div class="col-12">
                <div class="d-flex flex-column flex-md-row gap-3 justify-content-center justify-content-md-start">
                    <button type="submit" class="btn btn-primary btn-lg px-4">Применить фильтры</button>
                    <a class="btn btn-outline-secondary btn-lg px-4" asp-action="ScrapReport" asp-route-from='@DateTime.Now.AddDays(-29).ToString("yyyy-MM-dd")' asp-route-to='@DateTime.Now.ToString("yyyy-MM-dd")'>Сбросить</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-end mb-4">
    <a class="btn btn-outline-primary btn-lg px-4"
       asp-action="ScrapReportExport"
       asp-route-from='@Model.Filter.From.ToString("yyyy-MM-dd")'
       asp-route-to='@Model.Filter.To.ToString("yyyy-MM-dd")'
       asp-route-section='@Model.Filter.Section'
       asp-route-part='@Model.Filter.Part'
       asp-route-scrapType='@Model.Filter.ScrapType'
       asp-route-employee='@Model.Filter.Employee'>Экспорт в Excel</a>
</div>

@if (Model.HasData)
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-semibold d-flex flex-column flex-lg-row gap-3 justify-content-between align-items-lg-center fs-5">
            <span>Строк: @Model.Items.Count</span>
            <span>Списано брака: @Model.TotalQuantity.ToString("0.###")</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle fs-5" aria-describedby="scrapReportCaption">
                    <caption id="scrapReportCaption" class="visually-hidden">Отчёт по браку</caption>
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Дата</th>
                            <th scope="col">Участок</th>
                            <th scope="col">Деталь</th>
                            <th scope="col">Операция</th>
                            <th scope="col">Количество</th>
                            <th scope="col">Тип брака</th>
                            <th scope="col">Ответственный</th>
                            <th scope="col">Комментарий</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.SectionName</td>
                                <td>
                                    <div class="fw-semibold">@item.PartName</div>
                                    @if (!string.IsNullOrWhiteSpace(item.PartCode))
                                    {
                                        <div class="text-muted small">@item.PartCode</div>
                                    }
                                </td>
                                <td>@item.OpNumber.ToString("D3")</td>
                                <td>@item.Quantity.ToString("0.###")</td>
                                <td>@item.ScrapType</td>
                                <td>
                                    <span class="badge text-bg-secondary fs-6">@item.Employee</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Comment))
                                    {
                                        <span>@item.Comment</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-light border shadow-sm fs-5">
        <div class="fw-semibold mb-2">За выбранный период брака не выявлено.</div>
        <p class="mb-0">Измените фильтры или расширьте период поиска.</p>
    </div>
}

<div class="d-flex justify-content-end mt-4">
    <a class="btn btn-link fs-5" asp-controller="Home" asp-action="Index">← Вернуться на главную</a>
</div>
