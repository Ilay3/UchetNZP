@model UchetNZP.Web.Models.ScrapReportViewModel
@{
    ViewData["Title"] = "Отчёт по браку";
}

<div class="page-header mb-4">
    <h1 class="display-5 fw-semibold">Отчёт по браку</h1>
    <p class="lead mb-0">Фиксация случаев брака с фильтрами по датам, участкам и типам.</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3" autocomplete="off">
            <div class="col-md-3">
                <label class="form-label" for="scrapFromInput">Период с</label>
                <input id="scrapFromInput" class="form-control form-control-lg" type="date" name="from" value='@Model.Filter.From.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-md-3">
                <label class="form-label" for="scrapToInput">по</label>
                <input id="scrapToInput" class="form-control form-control-lg" type="date" name="to" value='@Model.Filter.To.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-md-3">
                <label class="form-label" for="scrapSectionInput">Участок</label>
                <input id="scrapSectionInput" class="form-control form-control-lg" type="text" name="section" value='@Model.Filter.Section' placeholder="Название или код участка" />
            </div>
            <div class="col-md-3">
                <label class="form-label" for="scrapPartInput">Деталь</label>
                <input id="scrapPartInput" class="form-control form-control-lg" type="text" name="part" value='@Model.Filter.Part' placeholder="Наименование или обозначение детали" />
            </div>
            <div class="col-md-3">
                <label class="form-label" for="scrapTypeSelect">Тип брака</label>
                <select id="scrapTypeSelect" class="form-select form-select-lg" name="scrapType">
                    <option value="">Все типы</option>
                    @if (Model.Filter.ScrapType == "Technological")
                    {
                        <option value="Technological" selected>Технологический</option>
                    }
                    else
                    {
                        <option value="Technological">Технологический</option>
                    }
                    @if (Model.Filter.ScrapType == "EmployeeFault")
                    {
                        <option value="EmployeeFault" selected>По вине сотрудника</option>
                    }
                    else
                    {
                        <option value="EmployeeFault">По вине сотрудника</option>
                    }
                </select>
            </div>

            <div class="col-md-6 d-flex align-items-end">
                <div class="d-flex flex-wrap gap-3 w-100">
                    <button type="submit" class="btn btn-primary btn-lg flex-grow-1">Применить</button>
                    <a class="btn btn-outline-secondary btn-lg flex-grow-1"
                       asp-action="ScrapReport"
                       asp-route-from='@DateTime.Now.AddDays(-29).ToString("yyyy-MM-dd")'
                       asp-route-to='@DateTime.Now.ToString("yyyy-MM-dd")'>Сбросить</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-end mb-4">
    <a class="btn btn-outline-primary btn-lg"
       asp-action="ScrapReportExport"
       asp-route-from='@Model.Filter.From.ToString("yyyy-MM-dd")'
       asp-route-to='@Model.Filter.To.ToString("yyyy-MM-dd")'
       asp-route-section='@Model.Filter.Section'
       asp-route-part='@Model.Filter.Part'
       asp-route-scrapType='@Model.Filter.ScrapType'
       asp-route-employee='@Model.Filter.Employee'>Экспорт в Excel</a>
</div>

@if (Model.HasData)
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-semibold d-flex justify-content-between align-items-center">
            <span>Найдено записей: @Model.Items.Count</span>
            <span>Суммарное количество: @Model.TotalQuantity.ToString("0.###")</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle" aria-describedby="scrapReportCaption">
                    <caption id="scrapReportCaption" class="visually-hidden">Результаты отчёта по браку</caption>
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Дата</th>
                            <th scope="col">Участок</th>
                            <th scope="col">Деталь</th>
                            <th scope="col">Операция</th>
                            <th scope="col">Количество</th>
                            <th scope="col">Тип брака</th>
                            <th scope="col">Комментарий</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                <td>@item.SectionName</td>
                                <td>
                                    <div class="fw-semibold">@item.PartName</div>
                                    @if (!string.IsNullOrWhiteSpace(item.PartCode))
                                    {
                                        <div class="text-muted small">@item.PartCode</div>
                                    }
                                </td>
                                <td>@item.OpNumber.ToString("D3")</td>
                                <td>@item.Quantity.ToString("0.###")</td>
                                <td>@item.ScrapType</td>
                                <td>@(string.IsNullOrWhiteSpace(item.Comment) ? "—" : item.Comment)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-light border shadow-sm">
        <div class="fw-semibold mb-1">По выбранным условиям брака не найдено.</div>
        <p class="mb-0">Попробуйте расширить период или изменить параметры фильтра.</p>
    </div>
}

<div class="d-flex justify-content-end mt-4">
    <a class="btn btn-link" asp-controller="Home" asp-action="Index">← Вернуться на главную</a>
</div>
