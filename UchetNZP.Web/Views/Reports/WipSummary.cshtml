@model UchetNZP.Web.Models.WipSummaryViewModel
@{
    ViewData["Title"] = "Итоговый отчёт НЗП";
}

<div class="page-header mb-4">
    <h1 class="display-5 fw-semibold">Итоговый отчёт НЗП</h1>
    <p class="lead mb-0">Сводные данные по приходу, расходу и текущим остаткам НЗП. Настройте фильтры и оцените нагрузку по участкам и операциям.</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3" autocomplete="off">
            <div class="col-md-3">
                <label class="form-label" for="summaryFromInput">Период с</label>
                <input id="summaryFromInput" class="form-control form-control-lg" type="date" name="from" value='@Model.Filter.From.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-md-3">
                <label class="form-label" for="summaryToInput">по</label>
                <input id="summaryToInput" class="form-control form-control-lg" type="date" name="to" value='@Model.Filter.To.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-md-3">
                <label class="form-label" for="summaryPartInput">Деталь</label>
                <input id="summaryPartInput" class="form-control form-control-lg" type="text" name="part" value='@Model.Filter.Part' placeholder="Наименование или обозначение детали" />
            </div>
            <div class="col-md-3">
                <label class="form-label" for="summarySectionInput">Участок</label>
                <input id="summarySectionInput" class="form-control form-control-lg" type="text" name="section" value='@Model.Filter.Section' placeholder="Название или код участка" />
            </div>
            <div class="col-12 d-flex align-items-end">
                <div class="d-flex flex-wrap gap-3 w-100">
                    <button type="submit" class="btn btn-primary btn-lg flex-grow-1">Применить</button>
                    <a class="btn btn-outline-secondary btn-lg flex-grow-1" asp-action="WipSummary" asp-route-from='@DateTime.Now.AddDays(-29).ToString("yyyy-MM-dd")' asp-route-to='@DateTime.Now.ToString("yyyy-MM-dd")'>Сбросить</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.HasData)
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-semibold d-flex flex-wrap gap-3 justify-content-between align-items-center">
            <span>Строк: @Model.Items.Count</span>
            <div class="d-flex flex-wrap gap-3">
                <span>Приход: @Model.TotalReceipt.ToString("0.###")</span>
                <span>Расход: @Model.TotalLaunch.ToString("0.###")</span>
                <span>Остаток: @Model.TotalBalance.ToString("0.###")</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle" aria-describedby="wipSummaryCaption">
                    <caption id="wipSummaryCaption" class="visually-hidden">Итоговые данные по НЗП</caption>
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Деталь</th>
                            <th scope="col">Участок</th>
                            <th scope="col">Операция</th>
                            <th scope="col">Приход</th>
                            <th scope="col">Расход</th>
                            <th scope="col">Остаток</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@item.PartName</div>
                                    @if (!string.IsNullOrWhiteSpace(item.PartCode))
                                    {
                                        <div class="text-muted small">@item.PartCode</div>
                                    }
                                </td>
                                <td>@item.SectionName</td>
                                <td>@item.OpNumber.ToString("D3")</td>
                                <td>@item.Receipt.ToString("0.###")</td>
                                <td>@item.Launch.ToString("0.###")</td>
                                <td>@item.Balance.ToString("0.###")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-light border shadow-sm">
        <div class="fw-semibold mb-1">За выбранный период данных нет.</div>
        <p class="mb-0">Попробуйте изменить условия отбора.</p>
    </div>
}

<div class="d-flex justify-content-end mt-4">
    <a class="btn btn-link" asp-controller="Home" asp-action="Index">← Вернуться на главную</a>
</div>
