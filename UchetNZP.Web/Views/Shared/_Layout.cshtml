<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Учёт НЗП</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" integrity="sha384-CMg1TW/9CJk+EKYv/o3Av+GFG8sH0bX7gBWuTQn4h6PKKLBdP8Z1mXlSW1PjXK6y" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.3/dist/bootstrap-table.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UchetNZP.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="backgroundBubblesRoot" class="background-bubbles" aria-hidden="true"></div>

    <div class="app-content-layer">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light app-surface border-bottom shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">Учёт НЗП</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Переключить навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-3">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-uppercase small fw-semibold" href="#" id="operationsMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Запуск
                            </a>

                            <ul class="dropdown-menu shadow" aria-labelledby="operationsMenu">
                                
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="WipLaunches" asp-action="Index">Запуск НЗП</a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="WipLaunches" asp-action="History">История запусков</a>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-uppercase small fw-semibold" href="#" id="operationsMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Операции
                            </a>

                            <ul class="dropdown-menu shadow" aria-labelledby="operationsMenu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="WipReceipts" asp-action="Index">Приход НЗП</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="WipTransfers" asp-action="Index">Передача НЗП</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Warehouse" asp-action="Index">Склад НЗП</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="WipLabels" asp-action="Index">Ярлыки НЗП</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="WipHistory" asp-action="Index">История операций</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-uppercase small fw-semibold" href="#" id="reportsMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Отчёты
                            </a>
                            <ul class="dropdown-menu shadow" aria-labelledby="reportsMenu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Reports" asp-action="ReceiptReport">Отчёт по приходу</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Reports" asp-action="TransferPeriodReport">Отчёт по передачам</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Reports" asp-action="ScrapReport">Отчёт по браку</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Reports" asp-action="WipBatchReport">Остатки по партиям</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Reports" asp-action="LabelMovementReport">Движение ярлыка</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-uppercase small fw-semibold" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Администратор
                            </a>
                            <ul class="dropdown-menu shadow" aria-labelledby="adminMenu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Routes" asp-action="Index">Маршруты деталей</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Routes" asp-action="Import">Маршруты (импорт)</a>
                                </li>
                                
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container pb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="toast-container position-fixed top-0 end-0 p-3" id="appToastContainer" aria-live="polite" aria-atomic="true"></div>

    <div class="modal fade" id="appConfirmModal" tabindex="-1" aria-labelledby="appConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="appConfirmModalLabel">Подтверждение</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-2" id="appConfirmModalMessage">Подтвердите действие.</p>
                    <div class="fw-semibold" id="appConfirmModalEntity"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-danger" id="appConfirmModalSubmit">Удалить</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3 app-surface">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Учёт НЗП
        </div>
    </footer>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.3/dist/bootstrap-table.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.3/dist/locale/bootstrap-table-ru-RU.min.js"></script>
    <script src="~/js/common-ui.js" asp-append-version="true"></script>
    <script src="~/js/background-bubbles.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
