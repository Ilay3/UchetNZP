@model UchetNZP.Web.Models.RouteEditInputModel
@{
    ViewData["Title"] = Model.Title;
    var formAction = Model.Id.HasValue ? "Edit" : "Create";
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <div>
        <h1 class="mb-1">@Model.Title</h1>
        <p class="text-muted mb-0">Заполните обязательные поля и сохраните изменения.</p>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">К списку маршрутов</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="@formAction" asp-controller="Routes" asp-route-id="@Model.Id" method="post" class="row g-4" autocomplete="off">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-6">
                <label asp-for="PartName" class="form-label"></label>
                <input asp-for="PartName" class="form-control form-control-lg" placeholder="Наименование детали" />
                <span asp-validation-for="PartName" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <label asp-for="OpNumber" class="form-label"></label>
                <input asp-for="OpNumber" class="form-control form-control-lg" min="1" />
                <span asp-validation-for="OpNumber" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <label asp-for="NormHours" class="form-label"></label>
                <input asp-for="NormHours" class="form-control form-control-lg" min="0" step="0.001" />
                <span asp-validation-for="NormHours" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="OperationName" class="form-label"></label>
                <input asp-for="OperationName" class="form-control form-control-lg" placeholder="Наименование операции" />
                <span asp-validation-for="OperationName" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="SectionName" class="form-label"></label>
                <input asp-for="SectionName" class="form-control form-control-lg" placeholder="Наименование участка" />
                <span asp-validation-for="SectionName" class="text-danger"></span>
            </div>
            <div class="col-12 d-flex flex-column flex-md-row gap-3">
                <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
