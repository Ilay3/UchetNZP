@model UchetNZP.Web.Models.RouteListViewModel
@{
    ViewData["Title"] = "Маршруты деталей";
    var searchValue = Model.Filter.Search ?? string.Empty;
    var selectedSectionId = Model.Filter.SectionId;
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <div>
        <h1 class="mb-1">Маршруты деталей</h1>
        <p class="text-muted mb-0">Просматривайте, фильтруйте и редактируйте технологические маршруты.</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-primary" asp-action="Create">Добавить маршрут</a>
        <a class="btn btn-outline-primary" asp-action="Import">Импорт и редактирование</a>
    </div>
</div>

@if (TempData["RouteMessage"] is string successMessage)
{
    <div class="alert alert-success" role="status">@successMessage</div>
}

@if (TempData["RouteError"] is string errorMessage)
{
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-lg-5 col-xl-6">
                <label class="form-label" for="routesSearchInput">Поиск</label>
                <input id="routesSearchInput" class="form-control form-control-lg" type="text" name="Search" value="@searchValue" placeholder="Деталь, операция или участок" />
            </div>
            <div class="col-lg-4 col-xl-3">
                <label class="form-label" for="routesSectionSelect">Участок</label>
                <select id="routesSectionSelect" class="form-select form-select-lg" name="SectionId">
                    <option value="">Все участки</option>
                    @foreach (var sectionItem in Model.Filter.Sections)
                    {
                        var selected = selectedSectionId.HasValue && selectedSectionId.Value == sectionItem.Id;
                        var label = string.IsNullOrWhiteSpace(sectionItem.Code) ? sectionItem.Name : $"{sectionItem.Name} ({sectionItem.Code})";
                        <option value="@sectionItem.Id" selected="@(selected ? "selected" : null)">@label</option>
                    }
                </select>
            </div>
            <div class="col-lg-3 col-xl-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg flex-grow-1">Применить</button>
                <a class="btn btn-outline-secondary btn-lg" asp-action="Index">Сбросить</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Routes.Count == 0)
{
    <div class="alert alert-info fs-5" role="status">
        Подходящих маршрутов не найдено. Добавьте новый маршрут или измените параметры поиска.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Всего маршрутов: @Model.Total</span>
            @if (!string.IsNullOrWhiteSpace(searchValue) || selectedSectionId.HasValue)
            {
                <span class="text-muted small">Показаны результаты с учётом выбранных фильтров.</span>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle" aria-describedby="routesTableCaption">
                    <caption id="routesTableCaption" class="visually-hidden">Текущие маршруты с возможностью редактирования</caption>
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Деталь</th>
                            <th scope="col">Операция</th>
                            <th scope="col" class="text-nowrap">Норматив, н/ч</th>
                            <th scope="col">Участок</th>
                            <th scope="col" class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var route in Model.Routes)
                        {
                            <tr>
                                <td class="fw-semibold">@route.PartDisplayName</td>
                                <td>@route.OperationDisplay</td>
                                <td>@route.NormHours.ToString("0.###")</td>
                                <td>@route.SectionName</td>
                                <td class="text-end text-nowrap">
                                    <a class="btn btn-link text-decoration-none" asp-action="Edit" asp-route-id="@route.Id">Изменить</a>
                                    <form asp-action="Delete" asp-route-id="@route.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link text-danger text-decoration-none" onclick="return confirm('Удалить выбранный маршрут?');">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
