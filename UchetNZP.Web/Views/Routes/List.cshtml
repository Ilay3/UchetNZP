@using System.Linq
@using UchetNZP.Shared
@model UchetNZP.Web.Models.RouteListViewModel
@{
    ViewData["Title"] = "Маршруты деталей";
    var searchValue = Model.Filter.Search ?? string.Empty;
    var selectedSectionId = Model.Filter.SectionId;
    var groupedRoutes = Model.Routes
        .GroupBy(route => new { route.PartId, route.PartDisplayName })
        .Select(group => group.OrderBy(r => r.OpNumber, StringComparer.Ordinal).ToList())
        .ToList();
}

<div class="page-header mb-4">
    <h1 class="display-5 fw-semibold">Маршруты деталей</h1>
    <p class="lead">Управляйте технологическими маршрутами: используйте фильтры, просматривайте операции и редактируйте данные.</p>
</div>

<div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-4">
    <div class="text-muted small">Всего маршрутов: @Model.Total</div>
    <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-primary" asp-action="Create">Добавить маршрут</a>
        <a class="btn btn-secondary" asp-action="Import">Импорт</a>
        <a class="btn btn-outline-success" asp-action="Export" asp-route-Search="@(string.IsNullOrWhiteSpace(searchValue) ? null : searchValue)" asp-route-SectionId="@(selectedSectionId.HasValue ? selectedSectionId.Value : null)">Экспорт в Excel</a>
    </div>
</div>

@if (TempData["RouteMessage"] is string successMessage)
{
    <div class="d-none" data-toast-message="@successMessage" data-toast-variant="success"></div>
}

@if (TempData["RouteError"] is string errorMessage)
{
    <div class="d-none" data-toast-message="@errorMessage" data-toast-variant="danger"></div>
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light fw-semibold">Фильтр маршрутов</div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end" autocomplete="off">
            <div class="col-12 col-md-6 col-xl-5">
                <label class="form-label" for="routesSearchInput">Поиск</label>
                <input id="routesSearchInput" class="form-control form-control-lg" type="text" name="Search" value="@searchValue" placeholder="Деталь, операция или вид работ" />
            </div>
            <div class="col-12 col-md-6 col-xl-4">
                <label class="form-label" for="routesSectionSelect">Вид работ</label>
                <select id="routesSectionSelect" class="form-select form-select-lg" name="SectionId">
                    <option value="">Все виды работ</option>
                    @foreach (var sectionItem in Model.Filter.Sections)
                    {
                        var selected = selectedSectionId.HasValue && selectedSectionId.Value == sectionItem.Id;
                        var label = NameWithCodeFormatter.getNameWithCode(sectionItem.Name, sectionItem.Code);
                        <option value="@sectionItem.Id" selected="@(selected ? "selected" : null)">@label</option>
                    }
                </select>
            </div>
            <div class="col-12 col-xl-3 d-flex flex-wrap gap-3">
                <button type="submit" class="btn btn-primary btn-lg flex-grow-1">Применить</button>
                <a class="btn btn-secondary btn-lg flex-grow-1" asp-action="Index">Сбросить</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Routes.Count == 0)
{
    <div class="alert alert-light border shadow-sm">
        <div class="fw-semibold mb-1">Подходящих маршрутов не найдено.</div>
        <p class="mb-0">Добавьте новый маршрут или измените параметры поиска.</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex flex-column flex-md-row gap-2 justify-content-between align-items-md-center">
            <div class="fw-semibold">Результаты поиска</div>
            @if (!string.IsNullOrWhiteSpace(searchValue) || selectedSectionId.HasValue)
            {
                <span class="text-muted small">Показаны данные с учётом выбранных фильтров.</span>
            }
        </div>
        <div class="card-body">
            <div class="accordion" id="routesAccordion">
                @for (var i = 0; i < groupedRoutes.Count; i++)
                {
                    var routes = groupedRoutes[i];
                    var first = routes[0];
                    var collapseId = $"routesGroup{i}";
                    var headingId = $"routesHeading{i}";
                    <div class="accordion-item mb-3 border-0 shadow-sm rounded-4">
                        <h2 class="accordion-header" id="@headingId">
                            <button class="accordion-button d-flex flex-column flex-md-row gap-3 align-items-start align-items-md-center" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(i == 0 ? "true" : "false")" aria-controls="@collapseId">
                                <span class="fs-5 fw-semibold">@first.PartDisplayName</span>
                                <span class="badge bg-light text-dark">Операций: @routes.Count</span>
                            </button>
                        </h2>
                        <div id="@collapseId" class="accordion-collapse collapse @(i == 0 ? "show" : string.Empty)" aria-labelledby="@headingId" data-bs-parent="#routesAccordion">
                            <div class="accordion-body">
                                <div class="table-responsive">
                                    <table class="table table-striped align-middle mb-0" aria-label="Маршрут детали @first.PartDisplayName">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col">Операция</th>
                                                <th scope="col" class="text-nowrap">Норматив, н/ч</th>
                                                <th scope="col">Вид работ</th>
                                                <th scope="col" class="text-end">Действия</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var route in routes)
                                            {
                                                <tr>
                                                    <td>@route.OperationDisplay</td>
                                                    <td>@route.NormHours.ToString("0.###")</td>
                                                    <td>@route.SectionName</td>
                                                    <td class="text-end text-nowrap">
                                                        <a class="btn btn-link text-decoration-none" asp-action="Edit" asp-route-id="@route.Id">Изменить</a>
                                                        <form asp-action="Delete" asp-route-id="@route.Id" method="post" class="d-inline" data-loading-submit>
                                                            @Html.AntiForgeryToken()
                                                            <button type="button"
                                                                    class="btn btn-link text-danger text-decoration-none"
                                                                    data-confirm-delete
                                                                    data-confirm-message="Удалить маршрут?"
                                                                    data-confirm-entity="Маршрут детали: @route.PartDisplayName"
                                                                    data-loading-label="Удаление...">
                                                                Удалить
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
