@using System
@model AdminFilterPanelViewModel

<form id="@Model.FormId" class="card card-body mb-3 admin-filter-form" data-table-target="@Model.TargetTableId">
    <div class="d-flex flex-wrap align-items-center justify-content-between mb-3">
        <span class="text-uppercase text-muted small fw-semibold">Фильтры</span>
        <span class="text-muted small">Используйте поиск и фильтры для уточнения списка.</span>
    </div>
    <div class="row g-3 align-items-end">
        @foreach (var input in Model.Inputs)
        {
            <div class="@input.CssClass">
                <label for="@input.Id" class="form-label">@input.Label</label>
                @if (string.Equals(input.Type, "select", StringComparison.OrdinalIgnoreCase) && input.Options is not null)
                {
                    <select id="@input.Id" name="@input.Name" class="form-select">
                        <option value="">Все</option>
                        @foreach (var option in input.Options)
                        {
                            var selected = option.Value == input.Value ? "selected" : null;
                            <option value="@option.Value" selected="@selected">@option.Text</option>
                        }
                    </select>
                }
                else
                {
                    <input type="@input.Type" id="@input.Id" name="@input.Name" value="@input.Value" class="form-control" placeholder="@input.Placeholder" />
                }
            </div>
        }
        <div class="col-md-3 col-lg-2 d-flex gap-2">
            <button type="submit" class="btn btn-outline-primary flex-fill">@Model.SubmitLabel</button>
            <button type="button" class="btn btn-outline-secondary flex-fill admin-filter-reset" title="Сбросить фильтры">Сброс</button>
        </div>
    </div>
</form>
