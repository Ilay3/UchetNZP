@model UchetNZP.Web.Models.LaunchHistoryViewModel
@{
    ViewData["Title"] = "История запусков";
}

<div class="page-header mb-4">
    <h1 class="display-5 fw-semibold">История запусков НЗП</h1>
    <p class="lead">Отслеживайте ежедневные запуски: фильтруйте по датам, просматривайте детали и выгружайте отчёт в Excel.</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end" autocomplete="off">
            <div class="col-sm-6 col-md-3">
                <label class="form-label" for="historyFromInput">Период с</label>
                <input id="historyFromInput" class="form-control form-control-lg" type="date" name="from" value='@Model.Filter.From.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-sm-6 col-md-3">
                <label class="form-label" for="historyToInput">по</label>
                <input id="historyToInput" class="form-control form-control-lg" type="date" name="to" value='@Model.Filter.To.ToString("yyyy-MM-dd")' />
            </div>
            <div class="col-md-6 col-lg-4 d-flex flex-wrap gap-3">
                <button type="submit" class="btn btn-primary btn-lg flex-grow-1">Показать</button>
            </div>
        </form>
    </div>
</div>

@if (Model.HasData)
{
    <div class="accordion" id="launchHistoryAccordion">
        @for (var i = 0; i < Model.Dates.Count; i++)
        {
            var dateGroup = Model.Dates[i];
            var collapseId = $"historyDay{i}";
            var headingId = $"historyHeading{i}";
            <div class="accordion-item mb-3 border-0 shadow-sm rounded-4">
                <h2 class="accordion-header" id="@headingId">
                    <div class="d-flex w-100 align-items-stretch">
                        <button class="accordion-button d-flex flex-column flex-md-row gap-3 align-items-start align-items-md-center flex-grow-1" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(i == 0 ? "true" : "false")" aria-controls="@collapseId">
                            <span class="fs-4">@dateGroup.Date.ToString("dd.MM.yyyy")</span>
                            <span class="badge bg-light text-dark">Запусков: @dateGroup.LaunchCount</span>
                            <span class="badge bg-light text-dark">Изделий: @dateGroup.Quantity.ToString("0.###")</span>
                            <span class="badge bg-light text-dark">Часы: @dateGroup.Hours.ToString("0.###")</span>
                        </button>
                        <a class="btn btn-outline-secondary flex-shrink-0 d-flex align-items-center justify-content-center px-3" asp-action="ExportByDate" asp-route-date='@dateGroup.Date.ToString("yyyy-MM-dd")' title="Экспорт за @dateGroup.Date.ToString("dd.MM.yyyy")">
                            <span class="visually-hidden">Экспорт за @dateGroup.Date.ToString("dd.MM.yyyy")</span>
                            <span aria-hidden="true">⬇️</span>
                        </a>
                    </div>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse @(i == 0 ? "show" : string.Empty)" aria-labelledby="@headingId" data-bs-parent="#launchHistoryAccordion">
                    <div class="accordion-body">
                        @if (dateGroup.SectionSummaries.Count > 0)
                        {
                            <div class="mb-3">
                                <div class="fw-semibold mb-2">Часы по участкам</div>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var summary in dateGroup.SectionSummaries)
                                    {
                                        <span class="badge bg-light text-dark border">@summary.SectionName — @summary.Hours.ToString("0.###") ч</span>
                                    }
                                </div>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Деталь</th>
                                        <th scope="col">Участок</th>
                                        <th scope="col">Операции</th>
                                        <th scope="col">Количество</th>
                                        <th scope="col">Часы</th>
                                        <th scope="col">Комментарий</th>
                                        <th scope="col" class="text-end">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var launch in dateGroup.Launches)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@launch.PartDisplayName</div>
                                                <div class="text-muted small">ID: @launch.Id</div>
                                            </td>
                                            <td>@(string.IsNullOrWhiteSpace(launch.SectionName) ? "—" : launch.SectionName)</td>
                                            <td>
                                                <div class="fw-semibold">@launch.OperationRange</div>
                                                @if (launch.Operations.Count > 0)
                                                {
                                                    <details class="mt-1">
                                                        <summary class="small text-muted">Операции маршрута</summary>
                                                        <ul class="small mt-2 mb-0">
                                                            @foreach (var op in launch.Operations)
                                                            {
                                                                <li><strong>@op.OpNumber</strong> — @(string.IsNullOrWhiteSpace(op.OperationName) ? "Без названия" : op.OperationName) (@(string.IsNullOrWhiteSpace(op.SectionName) ? "Участок не задан" : op.SectionName)) (норма: @op.NormHours.ToString("0.###"), часы: @op.Hours.ToString("0.###"))</li>
                                                            }
                                                        </ul>
                                                    </details>
                                                }
                                                else
                                                {
                                                    <div class="text-muted small">Данные об операциях отсутствуют.</div>
                                                }
                                            </td>
                                            <td>@launch.Quantity.ToString("0.###")</td>
                                            <td>@launch.Hours.ToString("0.###")</td>
                                            <td>@(launch.HasComment ? launch.Comment : "—")</td>
                                            <td class="text-end">
                                                <button
                                                    type="button"
                                                    class="btn btn-outline-danger btn-sm"
                                                    data-launch-delete
                                                    data-launch-id="@launch.Id"
                                                    data-confirm="Удалить запуск по детали '@launch.PartDisplayName' от @(launch.LaunchDate.ToString("dd.MM.yyyy"))?">
                                                    Удалить
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-light border shadow-sm">
        <div class="fw-semibold mb-1">За выбранный период запусков не найдено.</div>
        <p class="mb-0">Попробуйте изменить даты или убедитесь, что данные о запуске были сохранены.</p>
    </div>
}

<div class="d-flex justify-content-end mt-4">
    <a class="btn btn-link" asp-action="Index">← Вернуться к запуску НЗП</a>
</div>

@section Scripts
{
    <script>
        (() => {
            const accordion = document.getElementById('launchHistoryAccordion');
            if (!accordion) {
                return;
            }

            accordion.addEventListener('click', async (event) => {
                const button = event.target instanceof HTMLElement
                    ? event.target.closest('[data-launch-delete]')
                    : null;

                if (!(button instanceof HTMLButtonElement)) {
                    return;
                }

                const launchId = button.getAttribute('data-launch-id');
                if (!launchId) {
                    return;
                }

                const confirmationMessage = button.getAttribute('data-confirm')
                    ?? 'Вы уверены, что хотите удалить запуск?';

                if (!window.confirm(confirmationMessage)) {
                    return;
                }

                button.disabled = true;
                let shouldReload = false;

                try {
                    const response = await fetch(`/wip/launch/${launchId}`, {
                        method: 'DELETE',
                        headers: {
                            'Accept': 'application/json'
                        }
                    });

                    if (response.ok) {
                        shouldReload = true;
                        const payload = await response.json();
                        const message = typeof payload?.message === 'string'
                            ? payload.message
                            : 'Запуск успешно удалён.';
                        window.alert(message);
                    } else {
                        const contentType = response.headers.get('Content-Type') ?? '';
                        if (contentType.includes('application/json')) {
                            const payload = await response.json();
                            const message = typeof payload?.message === 'string'
                                ? payload.message
                                : 'Не удалось удалить запуск.';
                            window.alert(message);
                        } else {
                            const text = await response.text();
                            window.alert(text || 'Не удалось удалить запуск.');
                        }
                    }
                } catch (error) {
                    if (window.console && typeof window.console.error === 'function') {
                        window.console.error(error);
                    }
                    window.alert('Произошла ошибка при удалении запуска.');
                } finally {
                    if (shouldReload) {
                        window.setTimeout(() => window.location.reload(), 0);
                    } else {
                        button.disabled = false;
                    }
                }
            });
        })();
    </script>
}
