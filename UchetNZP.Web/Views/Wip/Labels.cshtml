@model UchetNZP.Web.Models.WipLabelsPageViewModel
@{
    ViewData["Title"] = "Ярлыки НЗП";
}

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card glass-panel shadow-sm h-100">
            <div class="card-header">
                <h5 class="mb-0">Создание ярлыков</h5>
            </div>
            <div class="card-body">
                <div id="labelsFormMessage" class="alert d-none" role="alert"></div>
                <div class="mb-3">
                    <div class="btn-group w-100" role="group" aria-label="Способ создания ярлыка">
                        <input type="radio" class="btn-check" name="labelMode" id="labelModeAuto" value="auto" checked>
                        <label class="btn btn-outline-primary" for="labelModeAuto">Автоматический номер</label>
                        <input type="radio" class="btn-check" name="labelMode" id="labelModeManual" value="manual">
                        <label class="btn btn-outline-primary" for="labelModeManual">Ручной ввод номера</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="labelPartInput">Деталь</label>
                    <input id="labelPartInput" class="form-control" list="labelPartOptions" autocomplete="off" placeholder="Начните вводить название детали" />
                    <input id="labelPartId" type="hidden" />
                    <datalist id="labelPartOptions"></datalist>
                </div>
                <div class="mb-3 d-none" id="labelManualNumberRow">
                    <label class="form-label" for="labelNumberInput">Номер ярлыка</label>
                    <input id="labelNumberInput" type="text" class="form-control" maxlength="5" placeholder="Например, 00012" autocomplete="off" />
                    <div class="form-text">Доступны только цифры, номер будет дополнен нулями слева до пяти знаков.</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="labelDateInput">Дата</label>
                    <input id="labelDateInput" type="date" class="form-control" value="@Model.DefaultDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="labelQuantityInput">Количество</label>
                    <div class="input-group">
                        <input id="labelQuantityInput" type="number" class="form-control" step="0.001" min="0.001" value="1" />
                        <span class="input-group-text">шт</span>
                    </div>
                </div>
                <div class="mb-4" id="labelCountRow">
                    <label class="form-label" for="labelCountInput">Количество ярлыков</label>
                    <input id="labelCountInput" type="number" class="form-control" min="1" step="1" value="1" />
                </div>
                <button id="labelAddButton" type="button" class="btn btn-primary w-100">Создать ярлыки</button>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card glass-panel shadow-sm">
            <div class="card-header d-flex flex-column flex-md-row align-items-md-center justify-content-md-between gap-3">
                <div>
                    <h5 class="mb-0">Список ярлыков</h5>
                    <small class="text-muted">Выберите деталь и укажите период, чтобы увидеть созданные номера.</small>
                </div>
                <div class="d-flex flex-wrap gap-2 align-items-end">
                    <div>
                        <label for="labelsFilterFrom" class="form-label small mb-1">С даты</label>
                        <input id="labelsFilterFrom" type="date" class="form-control form-control-sm" />
                    </div>
                    <div>
                        <label for="labelsFilterTo" class="form-label small mb-1">По дату</label>
                        <input id="labelsFilterTo" type="date" class="form-control form-control-sm" />
                    </div>
                    <button id="labelsRefreshButton" type="button" class="btn btn-outline-secondary btn-sm ms-md-2">Обновить</button>
                </div>
            </div>
            <div class="card-body">
                <div id="labelsListMessage" class="alert d-none" role="alert"></div>
                <div class="table-responsive glass-table">
                    <table class="table table-sm table-hover align-middle" id="labelsTable">
                        <thead>
                            <tr>
                                <th scope="col">Номер</th>
                                <th scope="col">Дата</th>
                                <th scope="col">Количество</th>
                                <th scope="col">Деталь</th>
                                <th scope="col">Статус</th>
                                <th scope="col" class="text-end">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-center text-muted">
                                <td colspan="6">Нет данных для отображения</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="labelEditModal" tabindex="-1" aria-labelledby="labelEditModalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="labelEditModalTitle">Редактирование ярлыка</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2 text-muted small" id="labelEditPartName"></div>
                <div id="labelEditMessage" class="alert d-none" role="alert"></div>
                <div class="mb-3">
                    <label class="form-label" for="editLabelNumberInput">Номер</label>
                    <input id="editLabelNumberInput" type="text" class="form-control" maxlength="5" autocomplete="off" />
                    <div class="form-text">Доступны только цифры, номер автоматически дополняется до пяти символов.</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="editLabelDateInput">Дата</label>
                    <input id="editLabelDateInput" type="date" class="form-control" />
                </div>
                <div class="mb-0">
                    <label class="form-label" for="editLabelQuantityInput">Количество</label>
                    <div class="input-group">
                        <input id="editLabelQuantityInput" type="number" class="form-control" step="0.001" min="0.001" />
                        <span class="input-group-text">шт</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                <button id="labelEditSaveButton" type="button" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/labels.js" asp-append-version="true"></script>
}
